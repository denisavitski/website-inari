---
import Favicon from './Favicon.astro'
import Seo, { type Props as SeoProps } from './Seo.astro'

export interface Props {
  seo?: SeoProps | undefined
}

const { seo } = Astro.props
---

<head>
  <meta charset="UTF-8" />

  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0"
  />

  <!-- Убрать -->
  <meta
    name="robots"
    content="noindex, nofollow"
  />

  <Favicon />

  <Seo {...seo} />

  <script
    src="https://api-maps.yandex.ru/2.1/?coordorder=longlat&apikey=ef792626-7fde-4ae4-b177-22b34277d5b1&lang=ru_RU"
    type="text/javascript"
  ></script>
</head>
