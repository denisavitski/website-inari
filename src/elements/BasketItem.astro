---
import type { BasketStoreItem } from '@utils/types'

export interface Props extends Partial<BasketStoreItem> {
  class?: string
}

const {
  class: className,
  pid = 'string',
  name = 'Калифорния лайт, 8 шт.',
  image = '/images/food/1.jpg',
  description = 'Сливочный сыр, сурими, салат Айсберг, икра тобико оранжевая, кунжут',
  price = '550',
  amount = '1',
  ...rest
} = Astro.props
---

<div
  {...rest}
  class:list={['basket-item', className]}
>
  <button class="basket-item__remove-button">
    <svg class="basket-item__remove-button__icon">
      <use xlink:href="/sprite.svg#sprite:close"></use>
    </svg>
  </button>

  <img
    class="basket-item__image"
    src={image}
  />
  <div class="basket-item__content">
    <div
      class="basket-item__name"
      set:html={name}
    />
    <div
      class="basket-item__description"
      set:html={description}
    />
  </div>
  <div class="basket-item__bottom">
    <e-product-button size="big"></e-product-button>
    <div
      class="basket-item__price"
      set:html={price}
    />
  </div>
</div>

<style is:global>
  .basket-item {
    position: relative;

    width: 100%;

    display: grid;
    grid-template-columns: max-content 1fr;
    grid-template-rows: max-content max-content;
    grid-template-areas: 'image content' 'image bottom';
    gap: 1.6rem 2.4rem;

    padding: 1.6rem !important;

    border: 0.1rem solid var(--color-secondary-1);
    border-radius: var(--border-radius-2);
    background-color: var(--color-secondary-2);
  }

  .basket-item__remove-button {
    position: absolute;
    right: 1.6rem;
    top: 1.6rem;

    width: 2.4rem;
    height: 2.4rem;

    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .basket-item__remove-button__icon {
    width: 100%;
    height: 100%;
    fill: var(--color-secondary-3);
  }

  .basket-item__image {
    grid-area: image;
    width: 12rem;
    height: 12rem;
    border-radius: var(--border-radius-1);
    object-fit: cover;
  }

  .basket-item__content {
    grid-area: content;
    box-sizing: border-box;
    padding-right: 3.2rem;
  }

  .basket-item__name {
    font-size: 1.8rem;
    font-weight: 600;
    line-height: 120%;
    margin-bottom: 0.4rem;
  }

  .basket-item__description {
    font-size: 1.6rem;
    font-weight: 400;
    line-height: 120%;
  }

  .basket-item__bottom {
    grid-area: bottom;

    box-sizing: border-box;
    padding-right: 3.2rem;

    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .basket-item__price {
    font-size: 1.8rem;
    font-weight: 600;
    line-height: 120%;
  }

  @media (max-width: 768px) {
    .basket-item {
      grid-template-areas: 'image content' 'bottom bottom';

      gap: 0.8rem;
      padding: 0.8rem !important;
    }

    .basket-item__remove-button {
      right: 0.8rem;
      top: 0.8rem;

      width: 1.6rem;
      height: 1.6rem;
    }

    .basket-item__content {
      padding-right: 2.4rem;
    }

    .basket-item__image {
      width: 6rem;
      height: 5rem;
    }

    .basket-item__name {
      font-size: 1.2rem;
      margin-bottom: 0.2rem;
    }

    .basket-item__description {
      font-size: 1.2rem;
    }

    .basket-item__bottom {
      flex-direction: row-reverse;
      padding-right: 0;

      padding-top: 0.8rem;
      border-top: 0.1rem solid var(--color-secondary-1);
    }

    .basket-item__price {
      font-size: 1.6rem;
    }
  }
</style>
