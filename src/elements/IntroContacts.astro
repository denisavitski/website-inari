---
import SocialIconLinks from './SocialIconLinks.astro'

export interface Props {
  class?: string
}

const { class: className, ...rest } = Astro.props
---

<div
  {...rest}
  class:list={['intro-contacts', className]}
>
  <a
    class="f-d-24-s"
    href="tel:+79219998422"
    >+ 7 (921) 999-84-22</a
  >
  <SocialIconLinks theme={'rw'} /></div
>

<style is:global>
  .intro-contacts {
    display: flex;
    align-items: center;
    gap: 2.4rem;

    @media (max-width: 768px) {
      flex-direction: column;
      gap: 1.6rem;
    }
  }
</style>
